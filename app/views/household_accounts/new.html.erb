<%= render 'shared/header' %>

<div class="household-account-form-container">
  <h2 class="form-title">家計簿新規登録</h2>
  <%= form_with(model: @household_account, local: true) do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 家計簿結果入力フォーム %>
    <label class="form-text">いつの家計簿ですか？</label><br>
    <%= f.select :year, options_for_select((2024..2040).to_a), {}, class: "year-select" %>
    <%= f.collection_select(:month_id, Month.all, :id, :name, {}, {class:"month-select"}) %>

    <div class="form-grid">
    <div class="form-group">
      <%= f.label :housing, "住宅" %>
      <%= f.text_field :housing, value: 0, step: 1, id:"expense-field1" %>
    </div>
    <div class="form-group">
      <%= f.label :food, "食費" %>
      <%= f.text_field :food, value: 0, step: 1, id:"expense-field2" %>
    </div>
    <div class="form-group">
      <%= f.label :utilities, "水道光熱費" %>
      <%= f.text_field :utilities, value: 0, step: 1, id:"expense-field3" %>
    </div>
    <div class="form-group">
      <%= f.label :communication, "通信費" %>
      <%= f.text_field :communication, value: 0, step: 1, id:"expense-field4" %>
    </div>
    <div class="form-group">
      <%= f.label :daily_goods, "日用品" %>
      <%= f.text_field :daily_goods, value: 0, step: 1, id:"expense-field5" %>
    </div>
    <div class="form-group">
      <%= f.label :clothing_beauty, "美容・衣服" %>
      <%= f.text_field :clothing_beauty, value: 0, step: 1, id:"expense-field6" %>
    </div>
    <div class="form-group">
      <%= f.label :entertainment, "趣味・娯楽" %>
      <%= f.text_field :entertainment, value: 0, step: 1, id:"expense-field7" %>
    </div>
    <div class="form-group">
      <%= f.label :transportation, "交通費" %>
      <%= f.text_field :transportation, value: 0, step: 1, id:"expense-field8" %>
    </div>
    <div class="form-group">
      <%= f.label :health_medical, "健康・医療" %>
      <%= f.text_field :health_medical, value: 0, step: 1, id:"expense-field9" %>
    </div>
    <div class="form-group">
      <%= f.label :education, "教育費" %>
      <%= f.text_field :education, value: 0, step: 1, id:"expense-field10" %>
    </div>
    <div class="form-group">
      <%= f.label :insurance, "保険料" %>
      <%= f.text_field :insurance, value: 0, step: 1, id:"expense-field11" %>
    </div>
    <div class="form-group">
      <%= f.label :special_expenses, "特別費" %>
      <%= f.text_field :special_expenses, value: 0, step: 1, id:"expense-field12" %>
    </div>
  </div>

  <hr class="divider">

  <div class="form-group">
    <%= f.label :total, "合計" %>
    <%= f.text_field :total, value: 0, step: 1, id:"result"%>
  </div>

  <div class="form-group">
    <%= f.label :description, "メモ" %>
    <%= f.text_area :description, maxlength: 500, rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.submit "登録", class: "submit-button" %>
  </div>
  <% end %>
</div>

<%= render 'shared/footer' %>